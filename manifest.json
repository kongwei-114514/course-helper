{
  "manifest_version": 3,
  "name": "Course Helper",
  "version": "0.1.0",
  "description": "Tsinghua course helper",
  "permissions": ["tabs", "storage", "scripting", "cookies", "downloads"],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://id.tsinghua.edu.cn/*",
        "https://webvpn.tsinghua.edu.cn/*",
        "http://zhjwxk.cic.tsinghua.edu.cn/*",
        "https://learn.tsinghua.edu.cn/*"
      ],
      "js": [
        "scripts/fetcher.js",
        "content.js",
        "scripts/analyser.js",
        "scripts/exporter.js",
        "scripts/parser.js",
        "scripts/training-plan-main.js",
        "scripts/test.js"
      ]
    },
    {
      "matches": [
        "https://yourschool.cc/*"
      ],
      "js": [
        "scripts/course-crawler.js",
        "scripts/course-crawler-ui.js"
      ]
    }
  ],
  "action": {
    "default_title": "Course Helper"
  }
}